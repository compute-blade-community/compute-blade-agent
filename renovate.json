{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "commitMessagePrefix": "chore(deps):",
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "patch",
        "bump",
        "minor"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "ignoreDeps": [
    "github.com/warthog618/gpiod"
  ]
}